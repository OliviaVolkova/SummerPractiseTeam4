<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="150dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp">

    <TextView
        android:id="@+id/wordView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/word"
        style="@style/HeadersTextStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/stripe"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/dark"
        app:layout_constraintTop_toBottomOf="@id/wordView"/>

    <TextView
        android:id="@+id/definitionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Definition of the word"
        style="@style/SecondaryTextStyle_Rufina"
        app:layout_constraintTop_toBottomOf="@id/stripe"/>

    <Button
        android:id="@+id/IKnowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/I_know"
        app:layout_constraintBottom_toTopOf="@id/SkipButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/ToLearnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_learn"
        app:layout_constraintBottom_toTopOf="@id/SkipButton"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/SkipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_skip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>
