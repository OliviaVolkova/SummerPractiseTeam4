<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="35dp"
    android:paddingVertical="35dp"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/words_to_study"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/words_to_study_text"
        tools:itemCount="7"
        tools:listitem="@layout/item_word">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/words_to_study_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/HeadersTextStyle"
        android:textSize="24sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="10dp"
        android:text="Words to study"/>

    <TextView
        android:id="@+id/stripe_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/dark"
        app:layout_constraintTop_toBottomOf="@id/words_to_study_text"/>

    <TextView
        android:id="@+id/stripe_2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/dark"
        app:layout_constraintTop_toBottomOf="@id/words_to_study"/>

    <Button
        android:id="@+id/btn_backToMain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/SecondaryTextStyle_Roboto"
        android:background="@drawable/standard_button_style"
        android:text="get back"
        />



</androidx.constraintlayout.widget.ConstraintLayout>